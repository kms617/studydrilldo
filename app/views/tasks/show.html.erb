<h1>Task: <%= @task.focus %></h1>
<h2>Goal: <%= link_to @task.goal.name, goal_path(@task.goal) %></h2>
<p><% if @task.editable_by?(current_user) %><%= link_to "Revise", edit_task_path(@task) %> | <%= link_to 'Delete', @task, class: 'button radius', method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %></p><% end %>
  <% if @task.secret %>
    <p>Private Task</p>
  <% end %>
<ul>
  <li>
    <strong>Action: </strong><% if @task.action %><%= @task.action %><% else %><%= @task.action_url %><% end %>
  </li>
  <li>
    <strong>Goal: </strong><%= @task.goal.name %>
  </li>
  <li>
    <strong>Taken on: </strong><%= format_datetime(@task.created_at)%> | Duration <%= format_duration(@task.duration) %> | <%= @task.methodology.name.capitalize %> | <% if @task.completed == false %>Ongoing
      <% else %>Completed<% end %>
  </li>
  <li>
    <strong>Description: </strong><%= @task.description %>
  </li>
</ul><br>
<%= link_to "Back to the Goal", goal_path(@task.goal_id) %>

