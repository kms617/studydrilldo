<%= @task.focus %>
<% if @task.secret %>
  <p>Private Task</p>
<% end %>
<% if @task.action %><%= @task.action %><% else %><%= @task.action_url %><% end %>
<ul>
  <li>
    Goal: <%= @task.goal.name %>
  </li>
  <li>
    Taken on: <%= @task.created_at.strftime('%A, %b %d, %Y %l:%M %P')%> | Duration <%= @task.duration %> minutes | <% if @task.completed == false %>Ongoing
      <% else %>Completed<% end %>
  </li>
  <li>
    <%= @task.methodology.name %>
  </li>
  <li>
    Description:<br><%= @task.description %>
  </li>
</ul>
<%= link_to "Back to the Goal", goal_path(@task.goal_id) %>
