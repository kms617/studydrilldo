<h1>Goals</h1><br>
<ul>
  <% @goals.each do |goal| %>
  <li><%= link_to goal.name, goal_path(goal) %> | Set on: <%= goal.created_at.strftime('%A, %b %d, %Y %l:%M %P')%> by <%= link_to goal.user.username, user_path(goal.user) %> |
      <% if !goal.completed %>
        <div class="ongoing-line">Ongoing</div>
      <% else %>
        Completed
      <% end %>
    <% end %>
</ul>
