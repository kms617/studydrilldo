<h1>My Goals</h1><br>
<ul>
  <% @goals.each do |goal| %>
  <li><%= link_to goal.goal, goal_path(goal) %> | Set on: <%= goal.created_at.strftime('%A, %b %d, %Y %l:%M %p')%> |
      <% if goal.completed == false %> Ongoing
      <% else %> Completed <% end %></li><br>
  <% end %>
</ul>
<%= link_to "Add another Goal", new_goal_path %>
