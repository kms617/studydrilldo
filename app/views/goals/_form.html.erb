<%= form_for @goal do |f| %>
<% if @goal.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@goal.errors.count, "error") %> prohibited this goal from being submitted:</h3>

    <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<p>
  <%= f.label :name, "Goal" %>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :duration_in_minutes %>
  <%= f.text_field :duration %>
</p>

<p>
  <%= f.label :completed, "Finished?" %>
  <%= f.radio_button :completed, true %><label for="completed_true">yes</label>
  <%= f.radio_button :completed, false %><label for="completed_false">not yet</label>
</p>

<p>
  <%= f.label :objective%><br>
  <%= f.text_area :objective %>
</p>

<p>
  <%= f.check_box :secret %>
  <%= f.label :secret, "Make this goal private" %>
</p>

<p>
  <%= f.submit class: 'button radius' %>
</p>
<% end %>
