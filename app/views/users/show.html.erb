<h2><%= @user.username %></h2>
<div id="profile_photo"><p><%= image_tag(@user.profile_photo) %></p></div>
<p><%= @user.first_name %> <%= @user.last_name %></p>
<p><%= @user.email %></p>
<%= link_to 'Edit', edit_user_registration_path %>

<div class = "mygoals">
<h1>My Goals</h1><br>
<ul>
  <% @goals.each do |goal| %>
  <li><%= link_to goal.name, goal_path(goal) %> | Set on: <%= goal.created_at.strftime('%A, %b %d, %Y %l:%M %p')%> |
      <% if goal.completed == false %> Ongoing
      <% else %> Completed <% end %></li><br>
  <% end %>
</ul>
</div>


